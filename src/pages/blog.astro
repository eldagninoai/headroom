---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar/navbar.astro';

// Único post real/placeholder
const posts = [
  {
    title: "¿Qué hace Headroom Sound?",
    category: "Nuestra Esencia",
    date: "2024",
    img: "https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?q=80&w=2070&auto=format&fit=crop"
  }
];
---

<Layout title="Blog | Headroom">
  <Navbar />
  
  <main class="w-full bg-black text-white blog-padding">
    
    <div class="blog-container mb-[8vh] border-b border-gray-900 pb-8 flex flex-col items-center text-center">
      <h1 class="font-jost font-black uppercase leading-none text-white fluid-h1">
        Sonic<br><span class="text-[#F1EE14]">Culture</span>
      </h1>
      <p class="text-gray-500 font-mono mt-4 fluid-p">Explorando el universo del sonido.</p>
    </div>

    <div class="blog-container grid grid-cols-1 min-[1025px]:grid-cols-3 gap-[8vw] min-[1025px]:gap-[2vw]">
      
      {posts.map(post => (
        <article class="group cursor-pointer">
          <div class="image-wrapper overflow-hidden rounded-lg mb-4 bg-gray-900">
            <img src={post.img} alt={post.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 opacity-80 group-hover:opacity-100" />
          </div>
          
          <div class="flex items-center gap-3 mb-2 font-mono text-gray-500 fluid-meta">
            <span class="text-[#F1EE14] uppercase tracking-wider">{post.category}</span>
            <span>|</span>
            <span>{post.date}</span>
          </div>
          
          <h3 class="font-jost font-bold text-white leading-tight group-hover:text-gray-300 transition-colors fluid-h3">
            {post.title}
          </h3>
        </article>
      ))}

    </div>

  </main>
</Layout>

<style>
  /* --- 1. MÓVIL / TABLET (Base) --- */
  .blog-padding {
    padding-top: 15vh;
    padding-bottom: 10vh;
  }
  .blog-container {
    padding-left: 6vw;
    padding-right: 6vw;
  }

  /* Tipografía Móvil */
  .fluid-h1 { font-size: 13vw; }
  .fluid-p { font-size: 3.5vw; }
  .fluid-meta { font-size: 2.5vw; }
  .fluid-h3 { font-size: 5vw; }

  .image-wrapper {
    width: 100%;
    height: 60vw; /* Rectangular en móvil */
  }

  /* --- 2. ESCRITORIO (1025px+) --- */
  /* Aquí usamos VW PURO para escalado infinito */
  @media (min-width: 1025px) {
    .blog-padding {
      padding-top: 10vh; /* Espacio para el Navbar */
      padding-bottom: 15vh;
    }
    .blog-container {
      padding-left: 4.2vw;
      padding-right: 4.2vw;
    }

    /* Tipografía Escritorio (VW PURO) */
    .fluid-h1 { font-size: 7vw; }
    .fluid-p { font-size: 1vw; }
    .fluid-meta { font-size: 0.75vw; }
    .fluid-h3 { font-size: 1.5vw; }

    /* Imagen Escritorio */
    .image-wrapper {
      height: 20vw; /* Cuadrada/Paisaje proporcional */
    }
  }
</style>