---
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";

/* IMPORTANTE: Quitamos '@fontsource-variable/jost' para usar la versión estática.
   Mantenemos los demás imports que sí funcionan bien.
*/
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "@fontsource/montserrat/900.css";
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/700.css";
import "../styles/global.css";


export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = "https://headroomsound.netlify.app/LogoHeadroomNegro.png";
const { title } = Astro.props;
const makeTitle = title ? title + " | " + "Headroom" : "Headroom - Soluciones de Audio";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;700;900&display=swap" rel="stylesheet">

    <SEO
      title={makeTitle}
      description="Soluciones de audio"
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Headroom - Soluciones de Audio`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Soluciones de Audio",
        },
      }}
    />
  </head>
  <body class="bg-black text-white">
    <Navbar />
    <slot />
    <Footer />
    
    <style is:global>
      /* Configuración Base */
      html, body {
        /* CAMBIO: Usamos 'Jost' (la estática) en vez de 'Jost Variable' */
        font-family: 'Jost', sans-serif; 
        
        /* Esto ayuda a limpiar los bordes en iOS */
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      img { content-visibility: auto; }

      /* REFUERZO DE SEGURIDAD */
      /* Nos aseguramos de que las clases de Tailwind usen los números exactos */
      .font-bold, strong, b { font-weight: 700; }
      .font-black { font-weight: 900; }
      
      h1 { font-weight: 900; }
      h2, h3, h4 { font-weight: 700; }

    </style>
  </body>
</html>