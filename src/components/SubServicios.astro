---
// src/components/SubServicios.astro
import heroImage from '../assets/hero.png';

const placeholderImg = heroImage.src;

const data = {
  eventos: {
    title: "// AUDIO EVENTOS",
    summary: "Desde conciertos masivos hasta eventos corporativos íntimos. Proveemos ingeniería de audio en vivo (FOH/Monitores), renta de equipo de alta gama y gestión técnica completa para asegurar que tu evento suene impecable sin fallas técnicas.",
    services: [
      { title: "Sonorización (PA/FOH)", img: placeholderImg, link: "/servicios/sonorizacion" },
      { title: "Eventos Sociales", img: placeholderImg, link: "/servicios/sociales" },
      { title: "Eventos Corporativos", img: placeholderImg, link: "/servicios/corporativos" },
      { title: "Renta & Stage Mgmt", img: placeholderImg, link: "/servicios/renta" }
    ]
  },
  produccion: {
    title: "// PRODUCCIÓN",
    summary: "Tu música merece sonar al nivel de los grandes éxitos globales. Ofrecemos una cadena de producción completa: desde la composición y beatmaking, pasando por la grabación vocal, hasta la mezcla y mastering final con estándares de la industria.",
    services: [
      { title: "Mezcla & Mastering", img: placeholderImg, link: "/servicios/mezcla-master" },
      { title: "Producción & Beats", img: placeholderImg, link: "/servicios/produccion" },
      { title: "Vocal Coaching", img: placeholderImg, link: "/servicios/coaching" },
      { title: "Grabación Móvil", img: placeholderImg, link: "/servicios/grabacion" }
    ]
  },
  post: {
    title: "// POST-PRODUCCIÓN",
    summary: "El sonido es el 50% de la experiencia visual. Nos especializamos en crear mundos sonoros inmersivos para cine, publicidad y redes sociales. Diseño sonoro, Foley artesanal y doblaje para que tu imagen tenga el impacto que buscas.",
    services: [
      { title: "Diseño Sonoro & SFX", img: placeholderImg, link: "/servicios/sound-design" },
      { title: "Foley Profesional", img: placeholderImg, link: "/servicios/foley" },
      { title: "Mezcla para Video", img: placeholderImg, link: "/servicios/mezcla-video" },
      { title: "Restauración & Doblaje", img: placeholderImg, link: "/servicios/doblaje" }
    ]
  },
  management: {
    title: "// MANAGEMENT",
    summary: "No solo hacemos música, construimos carreras. Te ayudamos a navegar el negocio musical con estrategias de distribución digital, gestión de derechos y administración de contenido para que tú solo te preocupes por crear.",
    services: [
      { title: "Distribución Digital", img: placeholderImg, link: "/servicios/distribucion" },
      { title: "Management Artístico", img: placeholderImg, link: "/servicios/management" },
      { title: "Admin. Contenido (EPK)", img: placeholderImg, link: "/servicios/contenido" },
      { title: "Consultoría 360", img: placeholderImg, link: "/servicios/consultoria" }
    ]
  }
};

const defaultData = data["eventos"];
---

<script is:inline>
  const savedSub = sessionStorage.getItem('selectedCategory');
  const savedScroll = sessionStorage.getItem('subServicesScrollY');

  if (savedSub && savedSub !== 'eventos') {
    document.documentElement.classList.add('is-switching-subs');
  }

  if (savedScroll && 'scrollRestoration' in history) {
    history.scrollRestoration = 'manual';
  }
</script>

<style is:global>
  /* Ocultar contenido inicial si estamos cargando una categoría diferente a la default */
  .is-switching-subs .deck-container,
  .is-switching-subs #category-title,
  .is-switching-subs #category-summary {
    opacity: 0 !important;
    visibility: hidden !important; 
  }
  
  /* Transición suave al aparecer */
  .deck-container, #category-title, #category-summary {
    transition: opacity 0.3s ease-out;
  }
</style>

<section id="display-area" class="zona-subservicios mx-auto fade-in flex flex-col min-[1025px]:flex-row gap-[8vw] min-[1025px]:gap-[2vw] items-center min-[1025px]:items-start">
    
    <div class="w-full min-[1025px]:w-2/3 order-1 min-[1025px]:order-1 flex flex-col">
        <h4 id="category-title" class="text-[#F1EE14] font-mono mb-[3vh] min-[1025px]:mb-[1.5vw] uppercase tracking-widest border-l-0 min-[1025px]:border-l-4 border-[#F1EE14] min-[1025px]:pl-[1vw] fluid-text-xl text-center min-[1025px]:text-left">
          {defaultData.title}
        </h4>

        <div id="decks-wrapper" class="relative w-full overflow-hidden" style="min-height: 200px;">
            
            <div id="deck-a" class="deck-container grid grid-cols-1 md:grid-cols-2 gap-[3vw] min-[1025px]:gap-[1.5vw] w-full absolute top-0 left-0 relative-flow">
               {defaultData.services.map(service => (
                  <div class="service-card group service-link-action" data-link={service.link}>
                      <div class="img-container"><img src={service.img} alt={service.title}></div>
                      <div class="card-overlay"></div> 
                      <h3 class="card-title text-center min-[1025px]:text-left">{service.title}</h3>
                  </div>
               ))}
            </div>

            <div id="deck-b" class="deck-container grid grid-cols-1 md:grid-cols-2 gap-[3vw] min-[1025px]:gap-[1.5vw] w-full absolute top-0 left-0 opacity-0 pointer-events-none translate-x-full">
                </div>

        </div>
    </div>

    <div class="w-full min-[1025px]:w-1/4 order-1 min-[1025px]:order-2 bg-[#0a0a0a] border border-gray-800 p-[5vw] min-[1025px]:p-[1vw] rounded-xl relative min-[1025px]:sticky min-[1025px]:top-[6vw] min-[1025px]:mt-[1vw] text-center min-[1025px]:text-left">
        <h5 class="text-white font-bold uppercase mb-[2vh] min-[1025px]:mb-[1vw] tracking-wider flex items-center justify-center min-[1025px]:justify-start fluid-text-sm">
            <span class="text-[#F1EE14] mr-2">//</span> Resumen de Categoría
        </h5>
        <p id="category-summary" class="text-gray-400 font-mono leading-relaxed fluid-text-sm">
            {defaultData.summary}
        </p>
    </div>

</section>

<style>
  /* ESTILOS BASE */
  .zona-subservicios { width: 90%; margin-left: auto; margin-right: auto; margin-top: 0; padding-top: 5vh; padding-bottom: 10vh; position: relative; z-index: 20; }
  .fluid-text-xl { font-size: 6vw; } .fluid-text-sm { font-size: 3.5vw; } 
  :global(.service-card) { position: relative; background-color: #000; border: 2px solid #333; cursor: pointer; transition: all 0.3s ease; overflow: hidden; height: 18vw; border-radius: 0.75rem; }
  :global(.card-title) { position: absolute; bottom: 0; left: 0; right: 0; padding: 1rem; z-index: 2; color: #FFF; font-family: monospace; font-weight: bold; text-transform: uppercase; font-size: 3.5vw; text-shadow: 1px 1px 2px rgba(0,0,0,0.8); transition: color 0.3s; display: flex; justify-content: center; align-items: flex-end; }
  @media (min-width: 1025px) {
    .zona-subservicios { width: 63vw; margin-left: 31.2vw; margin-right: 0; margin-top: -13vw; padding-top: 0; padding-bottom: 5vw; }
    .fluid-text-xl { font-size: 1.05vw; } .fluid-text-sm { font-size: 0.75vw; }
    :global(.service-card) { height: 5vw; border-radius: 1vw; }
    :global(.card-title) { bottom: 0.6vw; left: 1vw; right: 1vw; padding: 0; font-size: 0.8vw; justify-content: flex-start; }
  }
  :global(.service-card:hover) { border-color: #F1EE14; box-shadow: 0 0 20px rgba(241, 238, 20, 0.2); }
  :global(.img-container) { position: absolute; inset: 0; z-index: 0; }
  :global(.service-card img) { width: 100%; height: 100%; object-fit: cover; filter: grayscale(100%) brightness(0.7); transition: all 0.5s ease; }
  :global(.service-card:hover img) { filter: grayscale(0%) brightness(1); transform: scale(1.05); }
  :global(.card-overlay) { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.2) 50%, rgba(0,0,0,0) 100%); z-index: 1; }
  :global(.service-card:hover .card-title) { color: #F1EE14; }

  /* --- CLASES DE ESTADO PARA LOS DECKS --- */
  
  /* El Deck que se ve y ocupa espacio en el flujo */
  .relative-flow {
      position: relative !important;
      opacity: 1 !important;
      transform: translateX(0) !important;
      pointer-events: auto !important;
  }

  /* Animación: Salida hacia la izquierda */
  .anim-slide-out {
      position: absolute !important; /* Lo sacamos del flujo para que no empuje */
      top: 0;
      left: 0;
      width: 100%;
      transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1), opacity 1s ease;
      transform: translateX(-100%) !important; /* Se va a la izquierda */
      opacity: 1 !important;
      pointer-events: none !important;
  }

  /* Preparación: Entrada desde la derecha */
  .anim-prepare-enter {
      position: absolute !important;
      top: 0;
      left: 0;
      width: 100%;
      transform: translateX(100%) !important; /* Empieza a la derecha */
      opacity: 1 !important;
      pointer-events: none !important;
  }

  /* Animación: Entrar al centro */
  .anim-slide-in {
      transform: translateX(0) !important; /* Llega al centro */
      opacity: 1 !important;
      
      /* AGREGA ESTO: La misma transición que usamos para la salida */
      transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1), opacity 1s ease;
  }

</style>

<script define:vars={{ data }}>
    window.subServiciosData = data;
</script>

<script is:inline>
    (function initDecks() {
        const saved = sessionStorage.getItem('selectedCategory');
        const savedScroll = sessionStorage.getItem('subServicesScrollY');

        if (!saved || saved === 'eventos') {
             if (savedScroll) window.scrollTo(0, parseInt(savedScroll));
             document.documentElement.classList.remove('is-switching-subs');
             return;
        }

        const catData = window.subServiciosData[saved];
        if (!catData) return;

        const titleEl = document.getElementById('category-title');
        const summaryEl = document.getElementById('category-summary');
        const deckA = document.getElementById('deck-a');

        if (titleEl) titleEl.innerText = catData.title;
        if (summaryEl) summaryEl.innerText = catData.summary;

        if (deckA) {
            let cardsHtml = '';
            catData.services.forEach(service => {
                cardsHtml += `
                    <div class="service-card group service-link-action" data-link="${service.link}">
                        <div class="img-container"><img src="${service.img}" alt="${service.title}"></div>
                        <div class="card-overlay"></div> 
                        <h3 class="card-title text-center min-[1025px]:text-left">${service.title}</h3>
                    </div>`;
            });
            deckA.innerHTML = cardsHtml;
        }

        if (savedScroll) window.scrollTo(0, parseInt(savedScroll));

        setTimeout(() => {
             document.documentElement.classList.remove('is-switching-subs');
        }, 50);
    })();
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // CONFIGURACIÓN
    const DURATION = 1000; 

    const wrapper = document.getElementById('decks-wrapper');
    const deckA = document.getElementById('deck-a');
    const deckB = document.getElementById('deck-b');
    const categoryTitle = document.getElementById('category-title');
    const categorySummary = document.getElementById('category-summary');
    const data = window.subServiciosData; 
    
    let isAnimating = false;
    let activeDeck = 'a'; 
    let animationTimer = null; 

    // Delegación de Click para Scroll y Links (Tarjetas)
    if(wrapper) {
        wrapper.addEventListener('click', (e) => {
            const card = e.target.closest('.service-link-action');
            if (card) {
                sessionStorage.setItem('subServicesScrollY', window.scrollY.toString());
                const link = card.getAttribute('data-link');
                if(link) window.location.href = link;
            }
        });
    }

    const forceFinishAnimation = () => {
        if(!isAnimating) return;
        const outgoing = activeDeck === 'a' ? deckA : deckB;
        const incoming = activeDeck === 'a' ? deckB : deckA;

        clearTimeout(animationTimer);
        
        incoming.classList.remove('anim-prepare-enter', 'anim-slide-in', 'absolute', 'top-0', 'left-0');
        incoming.classList.add('relative-flow');
        
        outgoing.classList.remove('anim-slide-out', 'relative-flow');
        outgoing.classList.add('absolute', 'top-0', 'left-0', 'opacity-0', 'pointer-events-none', 'translate-x-full');
        outgoing.innerHTML = ''; 

        wrapper.style.height = '';
        activeDeck = activeDeck === 'a' ? 'b' : 'a';
        isAnimating = false;
    };

    const renderCategory = (categoryName) => {
        if (isAnimating) forceFinishAnimation();

        const categoryData = data[categoryName];
        if (!categoryData) return;

        isAnimating = true;

        const outgoing = activeDeck === 'a' ? deckA : deckB;
        const incoming = activeDeck === 'a' ? deckB : deckA;

        wrapper.style.height = `${outgoing.offsetHeight}px`;

        let cardsHtml = '';
        categoryData.services.forEach(service => {
            cardsHtml += `
                <div class="service-card group service-link-action" data-link="${service.link}">
                    <div class="img-container"><img src="${service.img}" alt="${service.title}"></div>
                    <div class="card-overlay"></div> 
                    <h3 class="card-title text-center min-[1025px]:text-left">${service.title}</h3>
                </div>`;
        });
        incoming.innerHTML = cardsHtml;
        
        categoryTitle.innerText = categoryData.title;
        categorySummary.innerText = categoryData.summary;

        outgoing.classList.remove('relative-flow');
        outgoing.classList.add('anim-slide-out');

        incoming.classList.remove('opacity-0', 'pointer-events-none', 'translate-x-full');
        incoming.classList.add('anim-prepare-enter');

        void incoming.offsetWidth;

        incoming.classList.add('anim-slide-in');

        animationTimer = setTimeout(() => {
            incoming.classList.remove('anim-prepare-enter', 'anim-slide-in', 'absolute', 'top-0', 'left-0');
            incoming.classList.add('relative-flow'); 
            outgoing.classList.remove('anim-slide-out');
            outgoing.classList.add('absolute', 'top-0', 'left-0', 'opacity-0', 'pointer-events-none', 'translate-x-full');
            outgoing.innerHTML = ''; 
            wrapper.style.height = '';
            activeDeck = activeDeck === 'a' ? 'b' : 'a';
            isAnimating = false;
        }, DURATION); 
    };

    // --- LÓGICA DE CLICS EN LOS CÍRCULOS (TRIGGERS) ---
    const triggers = document.querySelectorAll('.service-trigger');
    const circlesContainer = document.getElementById('hero-circles-container');

    triggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        const triggerBtn = trigger.closest('.service-trigger');
        if (!triggerBtn) return;
        const categoryName = triggerBtn.getAttribute('data-category');
        
        // 1. Renderizar la categoría
        if(categoryTitle.innerText !== data[categoryName].title) {
            renderCategory(categoryName);
        }

        // 2. SCROLL INTELIGENTE (Solo Móvil)
        // Si la pantalla es menor a 1025px (Móvil/Tablet)
        if (window.innerWidth < 1025 && circlesContainer) {
            // Calculamos la posición del contenedor de círculos
            const targetPosition = circlesContainer.getBoundingClientRect().top + window.scrollY;
            
            // Hacemos scroll suave hasta ahí, dejando los círculos justo arriba
            window.scrollTo({
                top: targetPosition - 80, // -20px de margen para que no quede muy pegado
                behavior: 'smooth'
            });
        }
      });
    });
  });
</script>